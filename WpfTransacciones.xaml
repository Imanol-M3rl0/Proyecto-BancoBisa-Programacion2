<Window x:Class="WpfProyectoBancoP2C.WpfTransacciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBancoP2C"
        mc:Ignorable="d"
        Title="Banco Bisa - Transacciones"
        Height="400"
        Width="600"
        Icon="/images/LogoBisa.png">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/images/BancoBisa2.png" Opacity="0.9"/>
        </Grid.Background>
        <ListBox x:Name="lstTransacciones"
                 Margin="30"
                 Opacity="0.5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Fecha, StringFormat=dd/MM/yyyy HH:mm}" Width="150" Foreground="Black"/>
                        <Label Content="{Binding Tipo}" Width="100" Foreground="Black"/>
                        <Label Content="{Binding Monto}" Width="100" Foreground="Black"/>
                        <Label Content="{Binding SaldoFinal}" Width="100" Foreground="Black"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
