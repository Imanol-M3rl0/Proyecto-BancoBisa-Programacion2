<Window x:Class="WpfProyectoBancoP2C.WpfDataBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBancoP2C"
        mc:Ignorable="d"
        Title="Banco Bisa - Cuentas"
        Height="600"
        Width="1010"
        Icon="/images/BancoBisa2.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/BancoBisa2.png" Opacity="0.9"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbltitulo"
               Content="Mis Cuentas"
               FontSize="27"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <Label Content="Lista de Cuentas:" FontSize="15"/>
            <ListBox x:Name="lstBCuentas"
                     Opacity="0.8"
                     Height="150"
                     ItemsSource="{Binding ListaCuentas}"
                     SelectedItem="{Binding cuentaSel, Mode=TwoWay}"
                     SelectionChanged="lstBCuentas_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Nombre}" Foreground="Black"/>
                            <Label Content=" - " Foreground="Black"/>
                            <Label Content="{Binding Saldo}" Foreground="Black"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
            <Label Content="Número de Cuenta:" FontSize="20"/>
            <TextBox x:Name="txtNumCta"
                     Text="{Binding cuentaSel.Nombre, Mode=TwoWay}"
                     FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
            <Label Content="Saldo:" FontSize="20"/>
            <TextBox x:Name="txtSaldo"
                     Text="{Binding cuentaSel.Saldo, Mode=OneWay}"
                     FontWeight="Bold"
                     IsReadOnly="True"
                     Background="Yellow"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Monto:" FontSize="20" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMontoDeposito" Width="120" Height="30" Margin="5"/>
            </StackPanel>

            <Button x:Name="btnDeposito"
                    Content="Deposito"
                    Width="100"
                    Height="40"
                    Margin="5"
                    Click="btnDeposito_Click"/>
            <Button x:Name="btnRetiro"
                    Content="Retiro"
                    Width="100"
                    Height="40"
                    Margin="5"
                    Click="btnRetiro_Click"/>
            <Button x:Name="btnSaldoActual"
                    Content="SaldoActual"
                    Width="120"
                    Height="40"
                    Margin="5"
                    Click="btnSaldoActual_Click"/>
            <Button x:Name="btnTransacciones"
                    Content="Transacciones"
                    Width="130"
                    Height="40"
                    Margin="5"
                    Click="btnTransacciones_Click"/>
            <Button x:Name="btnAgregar"
                    Content="Agregar Cuenta"
                    Width="150"
                    Height="50"
                    FontWeight="Bold"
                    Margin="5"
                    Click="btnAgregar_Click"/>
            <Button x:Name="btnBorrar"
                    Content="Borrar Cuenta"
                    Width="150"
                    Height="50"
                    FontWeight="Bold"
                    Margin="5"
                    Click="btnBorrar_Click"/>
        </StackPanel>
    </Grid>

</Window>
