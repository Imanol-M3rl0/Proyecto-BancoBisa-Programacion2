<Window x:Class="WpfProyectoBancoP2C.WpfSeleccionRol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBancoP2C"
        mc:Ignorable="d"
        Title="Banco Bisa - Seleccionar Rol"
        Height="250" 
        Width="400"
        Icon="/images/BancoBisa2.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/BancoBisa2.png" Opacity="0.9"/>
        </Grid.Background>
        <Label Content="Seleccione su rol:" 
               FontSize="25" 
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="10"/>
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" >
            <Button x:Name="btnUsuario"
                    Content="Usuario" 
                    Margin="10"
                    Click="BtnUsuario_Click"/>
            <Button x:Name="btnAdmin"
                    Content="Administrador" 
                    Margin="10" Click="BtnAdmin_Click"/>
        </StackPanel>
    </Grid>
</Window>
