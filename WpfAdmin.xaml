<Window x:Class="WpfProyectoBancoP2C.WpfAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBancoP2C"
        mc:Ignorable="d"
        Title="Banco Bisa - Admin"
        Height="400"
        Width="600"
        Icon="/images/LogoBisa.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/BancoBisa2.png" Opacity="0.9"/>
        </Grid.Background>

        <Label x:Name="lblPanel"
            Content="Panel Administrador"
            FontSize="30"
           HorizontalAlignment="Center"
           VerticalAlignment="Top" 
           Margin="0,10"/>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Button x:Name="btnVerUsuarios"
                Content="Ver Usuarios (archivo)"
                Margin="10"
                 Click="BtnVerUsuarios_Click"/>
            <Button x:Name="btnVolver"
                Content="Volver" 
                Width="250"
               Margin="10" 
               Click="BtnVolver_Click"/>
        </StackPanel>
    </Grid>
</Window>
